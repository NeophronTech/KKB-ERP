      <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="Password" required="true">
      </div>
      <button type="submit" class="btn red block full-width bottom15">Login</button>
      <a href="app"><small>Forgot password?</small></a>
      <p class="text-muted text-center"><small>Do not have an account?</small></p>
      <a href="app" class="btn btn-sm btn-white btn-block">Create an account</a>
